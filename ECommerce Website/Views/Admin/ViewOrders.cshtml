@model IEnumerable<ECommerce_Website.Models.Order>

@{
    ViewData["Title"] = "Pending Orders";
}

<div class="container">
    <h3 class="text-center my-3">Pending Orders</h3>

@*     @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    } *@
    <a href="@Url.Action("OrderHistory", "Admin")" class="btn btn-info btn-sm">Order History</a>
    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.order_id</td>
                    <td>@order.cart.customers.customer_name</td>
                    <td>@order.cart.products.product_name</td>
                    <td>@order.cart.product_quantity</td>
                    <td>@order.cart.products.product_price</td>
                    <td>
                        <a href="@Url.Action("CompleteOrder", "Admin", new { id = order.cart_id })" class="btn btn-success btn-sm">Mark as Completed</a>
                        <a href="@Url.Action("DeleteOrder", "Admin", new { id = order.order_id })" class="btn btn-warning btn-sm">Remove Order</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
