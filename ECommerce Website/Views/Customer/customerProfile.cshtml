@{
    ViewData["Title"] = "Customer Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Customer>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <!-- Profile Image Section -->
            <div class="text-center">
                <img src="@("~/customer_images/" + Model[0].customer_image)" asp-append-version="true" alt="Profile Image" class="img-fluid rounded-circle mb-3" style="height: 200px; width: 200px;" />
            </div>

            <!-- Profile Image Upload Form -->
            <form method="post" enctype="multipart/form-data" asp-action="changeProfileImage">
                <div class="form-group">
                    <label for="customer_image">Upload New Profile Image</label>
                    <input type="file" name="customer_image" class="form-control my-3" />
                    <input type="hidden" name="customer_id" value="@Model[0].customer_id" />
                    <input type="hidden" name="customer_name" value="@Model[0].customer_name" />
                    <input type="hidden" name="customer_phone" value="@Model[0].customer_phone" />
                    <input type="hidden" name="customer_email" value="@Model[0].customer_email" />
                    <input type="hidden" name="customer_password" value="@Model[0].customer_password" />
                    <input type="hidden" name="customer_gender" value="@Model[0].customer_gender" />
                    <input type="hidden" name="customer_country" value="@Model[0].customer_country" />
                    <input type="hidden" name="customer_city" value="@Model[0].customer_city" />
                    <input type="hidden" name="customer_address" value="@Model[0].customer_address" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Change Image" class="btn btn-info btn-block" />
                </div>
            </form>
        </div>

        <div class="col-md-8">
            <!-- Profile Update Form -->
            <h4 class="text-center mb-4">Update Your Profile</h4>
            <form method="post" asp-action="updateCustomerProfile">
                <input type="hidden" name="customer_id" value="@Model[0].customer_id" />

                <div class="form-group">
                    <input type="text" name="customer_name" class="form-control mb-3" value="@Model[0].customer_name" placeholder="Enter Your Name" />
                </div>

                <div class="form-group">
                    <input type="text" name="customer_phone" class="form-control mb-3" value="@Model[0].customer_phone" placeholder="Enter Your Phone Number" />
                </div>

                <div class="form-group">
                    <input type="text" name="customer_email" class="form-control mb-3" value="@Model[0].customer_email" placeholder="Enter Your Email" />
                </div>

                <div class="form-group">
                    <input type="password" name="customer_password" class="form-control mb-3" value="@Model[0].customer_password" placeholder="Enter Your Password" />
                </div>

                <div class="form-group mb-3">
                    <label>Gender</label><br />
                    <div class="form-check form-check-inline">
                        <input type="radio" name="customer_gender" value="Male" class="form-check-input" @(Model[0].customer_gender == "Male" ? "checked" : "") />
                        <label class="form-check-label" for="Male">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="customer_gender" value="Female" class="form-check-input" @(Model[0].customer_gender == "Female" ? "checked" : "") />
                        <label class="form-check-label" for="Female">Female</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="customer_gender" value="Other" class="form-check-input" @(Model[0].customer_gender == "Other" ? "checked" : "") />
                        <label class="form-check-label" for="Other">Other</label>
                    </div>
                </div>

                <div class="form-group">
                    <input type="text" name="customer_country" class="form-control mb-3" value="@Model[0].customer_country" placeholder="Enter Your Country" />
                </div>

                <div class="form-group">
                    <input type="text" name="customer_city" class="form-control mb-3" value="@Model[0].customer_city" placeholder="Enter Your City" />
                </div>

                <div class="form-group">
                    <input type="text" name="customer_address" class="form-control mb-3" value="@Model[0].customer_address" placeholder="Enter Your Address" />
                </div>

                <input type="hidden" name="customer_image" value="@Model[0].customer_image" />

                <div class="form-group">
                    <input type="submit" class="btn btn-info btn-block" value="Update Profile" />
                </div>
            </form>
        </div>
    </div>
</div>



